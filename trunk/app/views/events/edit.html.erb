<h1>Editing event</h1>

<%= error_messages_for :event %>

<% form_for(@event) do |f| %>

  <p>
    <b>Title</b><br />
    <%= f.text_field :title %>
  </p>

  <p>
    <b>Start</b><br />
    <%= f.datetime_select :start %>
  </p>

  <p>
    <b>End</b><br />
    <%= f.datetime_select :ends %>
  </p>
  
  <p>
  	<b>All Day Event?</b><br />
	<%= f.check_box :all_day %>
  </p>

  <p>
    <b>Duration</b><br />
    <%= f.text_field :duration %>
  </p>

  <p>
    <b>Note</b><br />
    <%= f.text_area :note %>
  </p>


  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @event %> |
<%= link_to 'Back', events_path %>
