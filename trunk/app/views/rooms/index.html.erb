<h1>Listing rooms</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Location</th>
    <th>Clean</th>
    <th>Teaser</th>
    <th>Description</th>
    <th>Occupied</th>
    <th>Base price</th>
  </tr>

<% for room in @rooms %>
  <tr>
    <td><%=h room.name %></td>
    <td><%=h room.location %></td>
    <td><%=h room.clean %></td>
    <td><%=h room.teaser %></td>
    <td><%=h room.description %></td>
    <td><%=h room.occupied %></td>
    <td><%=h room.base_price %></td>
    <td><%= link_to 'Show', room %></td>
    <td><%= link_to 'Edit', edit_room_path(room) %></td>
    <td><%= link_to 'Destroy', room, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

