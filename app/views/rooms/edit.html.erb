<h1>Editing room</h1>

<%= error_messages_for :room %>

<% form_for(@room) do |f| %>
  <p>
    <b>Name</b><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <b>Location</b><br />
    <%= f.text_field :location %>
  </p>

  <p>
    <b>Clean</b><br />
    <%= f.check_box :clean %>
  </p>

  <p>
    <b>Teaser</b><br />
    <%= f.text_field :teaser %>
  </p>

  <p>
    <b>Description</b><br />
    <%= f.text_area :description %>
  </p>

  <p>
    <b>Occupied</b><br />
    <%= f.check_box :occupied %>
  </p>

  <p>
    <b>Base price</b><br />
    <%= f.text_field :base_price %>
  </p>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @room %> |
<%= link_to 'Back', rooms_path %>
